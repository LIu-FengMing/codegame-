<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="css/oblivionDetectionView.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <!--<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery.min.js"></script>-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.1.1/socket.io.js"></script>
    <script src="jquery-linedtextarea/jquery-linedtextarea.js"></script>
  	<link href="jquery-linedtextarea/jquery-linedtextarea.css" type="text/css" rel="stylesheet" />
    <link rel="Shortcut Icon" type="image/x-icon" href="img/titleIcon.ico" />
    <title>全速衝線</title>
  </head>
  <body onload="getArgs()">
    <audio id="bkMusic" src="Fine_Line.mp3" preload loop volume="0"></audio>
    <div class="wrap">
      <div class="main">
        <div class="box sidebarLeft"><!--left-->
          <img src="img/MARK.png" class = "leftMark">
          <input type="button" title="小幫手" id="helperBtn" value="" onclick="helper('blocklyDiv')">
        </div>
        <div class="box center" id="center">
          <div id="titleBar">
            <input type="button" title="返回鍵" value="" id="goBack" onclick="back()">
            <font id="titleFont"></font>
          </div>
          <div id="textareaBk" style="display: none;">
            <input type="button" title="關閉" id="clossDiv" value="X">
            <textarea id="textarea_1"></textarea>
          </div>
          <div id = "divcanvas"></div>
          <div id = "blocklyDiv">
            <div id = "funcDiv">
              <div class="titleDiv" id="titleDiv">
                <div style="cursor: default;">
                  可用指令
                </div>
              </div>
              <div class="func" id="func">
                <div style="cursor: default;">
                  main( )
                </div>
              </div>
              <div class="step" id="step" style="display:none;">
              </div>
              <div class="judgment" id="judgment" style="display:none;">
              </div>
              <input type="button" title="指令大全" class="instructionButton" value="" onclick="instructionView(center)">
            </div>
            <div id="textareaDiv">
              <textarea class="lined" id="textarea_0" style="height:expression((this.scrollHeight>100)?'100px':(this.scrollHeight+500)+'px');overflow:auto;"></textarea>
            </div>
            <div id = "textButtonDiv">
              <input type="button" title="開始" id="btn1" class="runButton"  value="" onclick="codeToCompiler();">
              <input type="button" title="重置地圖" class="clearButton" value="" onclick="restartButton()">
              <input type="button" title="重置地圖" class="restartButton" value="" onclick="clearButton(textarea_0)">
              <input type="button" title="設定" class="settingButton" value="" onclick="settingAllView(blocklyDiv)">
            </div>
          </div>
        </div>
        <div class="box sidebarRight"><!--right-->
          <font class = "userName" id="userName" ></font>
          <div class="userStar">
            <img src="img/star.png" class="imgIcon">
            <font class="starNumber" id="starNumber" ></font>
          </div>
          <button class="btnUser" title="個人資料" onclick="userData()"><i class="fas fa-user"></i> 個人資料</button>
          <button class="btnLogout" title="登出" onclick="logout()"><i class="fas fa-sign-out-alt"></i> 登出</button>
          <!--<div class="userGold">
            <img src="img/gold.png" class="imgIcon">
            <font class="starNumber">:xxx</font>
          </div>-->
        </div>
      </div>
      <div class="footer"></div>
    </div>
    <script src="js/oblivion/oblivionDetectionView.js"></script>
    <script src="oblivionGame/js/p5.min.js"></script>
    <script src="oblivionGame/js/p5.dom.js"></script>
    <script src="oblivionGame/js/mian.js"></script>
    <script src="js/closeEvent.js"></script>
  </body>
</html>
